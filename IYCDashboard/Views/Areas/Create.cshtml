@model IYCDashboard.Models.DB.Area

@{
    ViewBag.Title = "Add New Area";
    Layout = "~/Views/Shared/_sharedLayout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <br />
        <h4>Add Area</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AreaName, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AreaName, new { @class = "form-control1", style = "width:250px" })
                @Html.ValidationMessageFor(model => model.AreaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StateId, "State", htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-sm-8">
                @Html.DropDownList("StateId", null, htmlAttributes: new { @class = "form-control1", style = "width:250px" })
                @Html.ValidationMessageFor(model => model.StateId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CityId, "City", htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-sm-8">
                @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control1", style = "width:250px" })
                @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
</div>
