@model IYCDashboard.Models.DB.Category

@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_sharedLayout.cshtml";
}

@using (Html.BeginForm())
{
    <br />
    <h4>Add Category</h4>
    <hr />
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control1" , style = "width:250px" })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <p>
        @Html.ActionLink("Back to List", "Index", null, new {  @class = "btn btn-link" })
    </p>
</div>
